<resources>

    <!-- Base application theme. -->
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="android:layout_marginTop">@dimen/padding_12dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_text_view_normal_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/padding_2dp</item>
    </style>

    <style name="chat_text_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="chat_timings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a6abad</item>
    </style>

    <style name="text_tag_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_2dp</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_50dp</item>
        <item name="android:layout_margin">@dimen/padding_4dp</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="fontFamily">@font/sfuitext_light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/default_main_color</item>
        <item name="android:textColorHint">@color/default_main_color</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <!--        <item name="android:ems">10</item>-->
    </style>

    <style name="default_fab_next_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_16dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/ic_baseline_arrow_forward_ios_24</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <style name="text_base_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_4dp</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="onboardspinner"  parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:background">@drawable/inventory_spinner_background</item>
        <item name="android:textAppearance">@color/default_text_color</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">@font/sfuitext_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:padding">@dimen/padding_2dp</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/default_text_color</item>
        <item name="colorControlActivated">@color/ratingcolor</item>
    </style>


    <style name="StepView">
        <item name="sv_selectedCircleColor">@color/yellow_text_color</item>
        <item name="sv_selectedCircleRadius">14dp</item>
        <item name="sv_selectedTextColor">@color/white</item>
        <item name="sv_selectedStepNumberColor">@color/default_main_color</item>

        <item name="sv_stepNumberTextSize">12sp</item>

        <item name="sv_doneStepMarkColor">@color/white</item>

        <item name="sv_doneCircleColor">@color/yellow_text_color</item>
        <item name="sv_doneCircleRadius">14dp</item>
        <item name="sv_doneTextColor">@color/white</item>
        <item name="sv_nextTextColor">@color/white</item>

        <item name="sv_nextStepLineColor">@color/white</item>
        <item name="sv_doneStepLineColor">@color/yellow_text_color</item>

        <item name="sv_stepPadding">12dp</item>
        <item name="sv_textPadding">12dp</item>
        <item name="sv_stepLineWidth">0.8dp</item>
        <item name="sv_animationDuration">200</item>
        <item name="sv_textSize">14sp</item>
        <item name="sv_animationType">Line</item>
    </style>


</resources>
