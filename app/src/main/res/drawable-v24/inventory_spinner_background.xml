<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90"
                        android:startColor="@color/white"
                        android:endColor="@color/white"
                        android:centerColor="@color/white"/>


                    <corners android:radius="@dimen/padding_20dp" />

                    <padding android:bottom="3dp" android:left="@dimen/padding_8dp"
                        android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="@dimen/padding_4dp">

                <bitmap android:gravity="end|bottom|center_vertical"
                    android:src="@drawable/down_arrow" />

            </item>

        </layer-list>

    </item>

</selector>