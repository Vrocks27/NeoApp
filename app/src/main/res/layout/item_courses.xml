<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_10dp"
        app:cardElevation="@dimen/padding_6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2dp"
                android:padding="@dimen/padding_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/padding_4dp"
                    android:fontFamily="@font/sfuitext_regularg2"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_unflag" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="@dimen/padding_2dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_course_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="start|center"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/padding_10dp"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/padding_2dp"
                    android:layout_marginEnd="@dimen/padding_2dp"
                    android:background="@color/default_text_color"
                    android:gravity="start|center" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_course_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="start|center"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/padding_10dp"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/padding_2dp"
                    android:layout_marginEnd="@dimen/padding_2dp"
                    android:background="@color/default_text_color"
                    android:gravity="start|center" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_course_timeperiod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="start|center"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_course_intake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2dp"
                android:fontFamily="@font/sfuitext_semibold"
                android:minLines="1"
                android:padding="@dimen/padding_2dp"
                android:singleLine="true"
                android:textColor="@color/disabled_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2dp"
                android:padding="@dimen/padding_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_course_eligible_criteria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/padding_4dp"
                    android:fontFamily="@font/sfuitext_semibold"
                    android:minLines="1"
                    android:singleLine="true"
                    android:textColor="@color/disabled_color"
                    android:textSize="@dimen/text_size_14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/yellow_long_arrow" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>