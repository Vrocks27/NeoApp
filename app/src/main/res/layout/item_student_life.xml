<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_4dp"
        app:cardElevation="@dimen/padding_4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_studentlife"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lifetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="@dimen/padding_4dp"
                android:fontFamily="@font/sfuitext_semibold"
                android:gravity="start"
                android:minLines="1"
                android:padding="@dimen/padding_2dp"
                android:text=""
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/default_main_color"
                android:textSize="@dimen/text_size_14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_4dp"
                android:padding="@dimen/padding_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_lifedescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/padding_4dp"
                    android:padding="@dimen/padding_2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sfuitext_regular"
                    android:justificationMode="inter_word"
                    android:maxLines="4"
                    android:minLines="1"
                    android:textSize="@dimen/text_size_12sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/padding_24dp"
                    android:layout_height="@dimen/padding_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/yellow_long_arrow"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>