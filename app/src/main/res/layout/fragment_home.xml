<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10dp"
        app:cardBackgroundColor="@color/home_card_color"
        app:cardCornerRadius="@dimen/padding_10dp"
        app:cardElevation="@dimen/padding_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:overScrollMode="never"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_university" />

                <LinearLayout
                    android:id="@+id/sliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewpager"
                    android:layout_marginBottom="@dimen/padding_10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_8dp"
                android:orientation="vertical"
                android:padding="@dimen/padding_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cardview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/sfuitext_regularg2"
                        android:singleLine="true"
                        android:text="University of Toronto"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_mobilepng" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfuitext_regular"
                        android:maxLines="5"
                        android:layout_marginEnd="@dimen/padding_50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:minLines="3"
                        android:text="@string/address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:singleLine="true"
                        android:drawableStart="@drawable/ratingstart"
                        android:drawablePadding="5dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sfuitext_regular"
                        android:gravity="bottom"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/padding_20dp"
                        android:textSize="@dimen/text_size_16sp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homepage_tabs_bg"
        android:padding="@dimen/padding_10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="@dimen/padding_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:text="@string/know_more" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:text="@string/updates" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:text="@string/courses" />

    </LinearLayout>


</LinearLayout>