<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.activities.UniversityDetailAct">

    <include
        android:id="@+id/home_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--top view-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/sfuitext_regularg2"
                        android:maxLines="1"
                        android:minLines="1"
                        android:singleLine="true"
                        android:text="University of Toronto"
                        android:textColor="@color/default_text_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/sfuitext_regular"
                        android:maxLines="1"
                        android:minLines="1"
                        android:singleLine="true"
                        android:text="Toronto Ontario"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/text_size_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:progressTint="@color/ratingcolor"
                            android:numStars="5"
                            android:rating="4.6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/sfuitext_regular"
                            android:text="4.6"
                            android:textColor="@color/default_text_color"
                            android:textSize="@dimen/text_size_18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/padding_100dp"
                            android:layout_height="@dimen/padding_60dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:tint="@color/image_tint_color"
                            android:src="@drawable/default_university"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sfuitext_regular"
                            android:gravity="start|center"
                            android:maxLines="2"
                            android:minLines="2"
                            android:text="@string/photocount"
                            android:textColor="@color/white" />
                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/padding_60dp"
                        android:layout_height="@dimen/padding_50dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/padding_8dp"
                        android:layout_marginBottom="@dimen/padding_8dp"
                        app:srcCompat="@drawable/ic_phone_icon" />

                </LinearLayout>
            </RelativeLayout>

            <!--tablayout-->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="@dimen/padding_10dp"
                android:background="@color/homepage_tabs_bg"
                app:tabBackground="@drawable/home_tabs"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/CustomTabText">
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>