<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/padding_4dp"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="start"
            android:minLines="1"
            android:singleLine="true"
            android:text="@string/permanent_address"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColorHint="@color/default_text_color"
            android:layout_marginTop="@dimen/padding_4dp"
            android:gravity="start"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:hint="@string/Address"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding_4dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textColor="@color/default_text_color"
                android:singleLine="true"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/onboardspinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding_4dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/default_text_color"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/onboardspinner" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_4dp"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/postal_code"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/postalcode"
            android:imeOptions="actionNext"
            android:textColorHint="@color/default_text_color"
            android:fontFamily="@font/sfuitext_regular"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/default_text_color"
            android:layout_marginTop="@dimen/padding_4dp"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_8dp"
            android:fontFamily="@font/sfuitext_regular"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/default_text_color"
            android:text="@string/postal_address"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/default_text_color"
                android:layout_marginEnd="@dimen/padding_10dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/default_text_color"
                android:layout_marginStart="@dimen/padding_10dp"
                />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_8dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/padding_4dp"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="start"
            android:minLines="1"
            android:singleLine="true"
            android:text="@string/current_address"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColorHint="@color/default_text_color"
            android:layout_marginTop="@dimen/padding_4dp"
            android:gravity="start"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:hint="@string/Address"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding_4dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/state"
                android:textColor="@color/default_text_color"
                android:singleLine="true"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/onboardspinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding_4dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:fontFamily="@font/sfuitext_regular"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/default_text_color"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/onboardspinner" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_4dp"
            android:fontFamily="@font/sfuitext_regular"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/postal_code"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/postalcode"
            android:imeOptions="actionNext"
            android:textColorHint="@color/default_text_color"
            android:fontFamily="@font/sfuitext_regular"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/default_text_color"
            android:layout_marginTop="@dimen/padding_4dp"
            android:inputType="text"
            />
    </LinearLayout>



</LinearLayout>