<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_2dp"
        android:fontFamily="@font/sfuitext_regularg2"
        android:padding="@dimen/padding_2dp"
        android:text=""
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/text_size_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_2dp"
        android:orientation="horizontal"
        android:padding="@dimen/padding_2dp">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="@dimen/padding_2dp"
            android:background="@drawable/default_circle"
            android:padding="@dimen/padding_2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_sub_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2dp"
                android:fontFamily="@font/sfuitext_regularg2"
                android:padding="@dimen/padding_2dp"
                android:text="hjkhjkhkhku"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/text_size_10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/padding_2dp"
                android:background="@color/line_color"
                android:padding="@dimen/padding_2dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>