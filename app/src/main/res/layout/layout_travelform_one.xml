<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8dp"
            android:fontFamily="@font/sfuitext_regular"
            android:singleLine="true"
            android:text="@string/are_you_travel"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/yes"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/no"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8dp"
            android:fontFamily="@font/sfuitext_regular"
            android:singleLine="true"
            android:text="@string/accompained_family"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/yes"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/no"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_4dp"
            android:fontFamily="@font/sfuitext_regular"
            android:singleLine="true"
            android:text="@string/noof_family"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/family_person_name"
                android:layout_width="@dimen/padding_120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_4dp"
                android:layout_weight="1"
                android:background="@drawable/background_border"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="@dimen/padding_8dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_text_color" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/family_person_relation"
                android:layout_width="@dimen/padding_120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_4dp"
                android:layout_toEndOf="@id/family_person_name"
                android:layout_weight="1"
                android:background="@drawable/background_border"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="@dimen/padding_8dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_text_color" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/family_person_age"
                android:layout_width="@dimen/padding_60dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_4dp"
                android:layout_toEndOf="@id/family_person_relation"
                android:layout_weight="1"
                android:background="@drawable/background_border"
                android:hint="@string/age"
                android:inputType="number"
                android:padding="@dimen/padding_8dp"
                android:textColor="@color/default_text_color"
                android:textColorHint="@color/default_text_color" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/padding_4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_add" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8dp"
            android:fontFamily="@font/sfuitext_regular"
            android:text="@string/require"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/text_size_14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/yes"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_10dp"
                    android:fontFamily="@font/sfuitext_regular"
                    android:text="@string/no"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>


</LinearLayout>